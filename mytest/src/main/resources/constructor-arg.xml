<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="employee" class="com.spring.demo.constructorarg.Employee">
		<property name="name" value="Bob" />
		<property name="age" value="21" />
	</bean>

	<bean id="carFactory" class="com.spring.demo.constructorarg.CarFatory">
		<constructor-arg index="0" value="TOYOTA" />
		<constructor-arg name="address" value="100" />
		<constructor-arg name="employee" ref="employee" />
	</bean>
</beans>